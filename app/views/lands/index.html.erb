<p id="notice"><%= notice %></p>

<h1>Listing Lands</h1>

<table>
  <thead>
    <tr>
      <th>Heading</th>
      <th>Body</th>
      <th>Price</th>
      <th>Neigborhood</th>
      <th>External url</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lands.each do |land| %>
      <tr>
        <td><%= land.heading %></td>
        <td><%= land.body %></td>
        <td><%= land.price %></td>
        <td><%= land.neigborhood %></td>
        <td><%= land.external_url %></td>
        <td><%= land.timestamp %></td>
        <td><%= link_to 'Show', land %></td>
        <td><%= link_to 'Edit', edit_land_path(land) %></td>
        <td><%= link_to 'Destroy', land, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

